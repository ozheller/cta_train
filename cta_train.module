<?php

/**
*  Implements hook_theme().
*/
function cta_train_theme($existing, $type, $theme, $path) {
  $hooks = array();

  // Defines a custom theme function and template for the cta_train results.
  // @see cta-train.html.twig.
  $hooks['cta_train'] = array(
    'variables' => array(
      'ohare_north' => array(),
      'ohare_south' => array(),
    )
  );

  // Optional: Points to a block.html.twig template provided by our module. If
  // the name of the template matches a suggestion that's already being
  // generated by the system, that's all we need to do.
//  $hooks['block__cta_train'] = array(
//    'base hook' => 'block',
//  );

  return $hooks;
}